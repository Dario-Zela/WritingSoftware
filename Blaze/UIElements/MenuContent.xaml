<ListView x:Class="Blaze.UIElements.MenuContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blaze.UIElements"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:Blaze.Core"
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView.Resources>
        <converter:Adder x:Key="Adder" />
    </ListView.Resources>

    <ListView.Style>
        <Style TargetType="ListView">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <Border Background="{Binding Background, 
                                                 RelativeSource={RelativeSource AncestorType=local:MenuContent} }"
                                CornerRadius="{Binding CornerRadius, 
                                                 RelativeSource={RelativeSource AncestorType=local:MenuContent} }"
                                BorderThickness="0"
                                Margin="10,0,10,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="270" />
                            </Border.Effect>

                            <Grid>
                                <Border Name="mask" 
                                        Background="{Binding Background, 
                                                 RelativeSource={RelativeSource AncestorType=local:MenuContent} }"
                                        CornerRadius="{Binding CornerRadius, 
                                                 RelativeSource={RelativeSource AncestorType=local:MenuContent} }"
                                        BorderThickness="0"/>
                                <StackPanel>
                                    <StackPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                                    </StackPanel.OpacityMask>
                                    <ScrollViewer Style="{StaticResource CustomScrollViewer}">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ListView.Style>
</ListView>
