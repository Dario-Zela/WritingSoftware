<UserControl x:Class="Blaze.UIElements.ColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blaze.UIElements"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:Blaze.Core"
             xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance d:Type=local:ColorSelector}"
             d:Background="White">
    <UserControl.Resources>
        <converter:ColorToBrushConverter x:Key="BrushConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border VerticalAlignment="Stretch" 
                Grid.Row="0"
                Margin="0,0,0,10"
                Background="{Binding ElementName=ColorSlider, Path=SelectedColor, Mode=Default, Converter={StaticResource BrushConverter}}"/>
        <StackPanel Grid.Row="1">
            <DockPanel HorizontalAlignment="Right">
                <TextBlock Text="Hex Value"
                           Margin="0,0,10,0"/>
                <colorpicker:HexColorTextBox HorizontalAlignment="Right" ColorState ="{Binding ElementName=ColorSlider, Path=ColorState, Mode=TwoWay}"/>
            </DockPanel>
            <colorpicker:ColorSliders x:Name="ColorSlider" ColorChanged="ColorSlider_ColorChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
