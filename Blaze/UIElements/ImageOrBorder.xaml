<UserControl x:Class="Blaze.UIElements.ImageOrBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blaze.UIElements"
             mc:Ignorable="d" 
             x:Name="Container"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{Binding Background, ElementName=Container}"
            BorderThickness="0">
        <Image x:Name="Image"
               RenderOptions.BitmapScalingMode="Fant"
               Stretch="Fill"
               Width="{Binding Width, ElementName=Container}"
               Height="{Binding Height, ElementName=Container}"/>
    </Border>
</UserControl>
