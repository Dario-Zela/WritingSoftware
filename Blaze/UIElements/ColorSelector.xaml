<UserControl x:Class="Blaze.UIElements.ColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blaze.UIElements"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:Blaze.Core"
             xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ColorSelectorControl"
             d:Background="White">
    <UserControl.Resources>
        <converter:ColorToBrushConverter x:Key="BrushConverter"/>
        <converter:ColorIntensityConverter x:Key="ColorIntensityConverter" />
        <local:HSVToColorConverter x:Key="HSVConverter"/>

        <Style x:Key="SliderRepeatButton" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <StackPanel Orientation="Vertical">
                            <Border Width="15" Height="15"
                                    Background="Transparent"
                                    BorderThickness="4"
                                    CornerRadius="10">
                                <Border.BorderBrush>
                                    <RadialGradientBrush GradientOrigin="0.5,0.5" 
                                                         Center="0.5,0.5" 
                                                         RadiusX="0.5" 
                                                         RadiusY="0.5">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="White" Offset="0.75" />
                                            <GradientStop Color="Black" Offset="0.75" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </Border.BorderBrush>
                            </Border>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Horizontal_Slider" TargetType="Slider">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="IsMoveToPointEnabled" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate  TargetType="Slider">
                                <Grid>
                                    <Border x:Name="TrackBackground" 
                                            VerticalAlignment="Center" 
                                            BorderThickness="0"
                                            Background="{TemplateBinding Background}" 
                                            Height="15" 
                                            CornerRadius="7.5"
                                            Grid.Row="1"/>
                                    <Track x:Name="PART_Track">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource SliderRepeatButton}"  Command="Slider.DecreaseLarge" />
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource SliderThumb}"
                                                   VerticalAlignment="Center"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource SliderRepeatButton}" Command="Slider.IncreaseLarge" />
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border VerticalAlignment="Stretch" 
                Grid.Row="0"
                Margin="0,0,0,10"
                Background="{Binding ElementName=ColorSelectorControl, Path=ColorPicked, Mode=Default, Converter={StaticResource BrushConverter}}"/>
        <StackPanel Grid.Row="1">
            <TabControl BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid Name="Panel">
                                        <ContentPresenter x:Name="ContentSite"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        ContentSource="Header"
                                                        Margin="10,2"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Panel" Property="Background" Value="#A0A0A0A0" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Panel" Property="Background" Value="White" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="HSV">
                    <StackPanel Margin="0, 20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBox Text="H"
                                     Grid.Column="0"
                                     Foreground="Black"
                                     Background="Transparent"
                                     Style="{DynamicResource Body}"
                                     Margin="10,5,10,5"/>
                            <Slider Style="{StaticResource Horizontal_Slider}"
                                     Grid.Column="1"
                                    Minimum="0"
                                    Maximum="360"
                                    SmallChange="0.5"
                                    TickFrequency="0.5"
                                    Value="{Binding Path=HSVColorPicked.Hue, Mode=TwoWay,
                                            ElementName=ColorSelectorControl}"
                                    x:Name="HSV_Hue_Slider">
                                <Slider.Background>
                                    <!-- Gradient representing all hues -->
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF0000" Offset="0.0" />
                                        <!-- Red -->
                                        <GradientStop Color="#FFFF00" Offset="0.17" />
                                        <!-- Yellow -->
                                        <GradientStop Color="#00FF00" Offset="0.33" />
                                        <!-- Green -->
                                        <GradientStop Color="#00FFFF" Offset="0.5" />
                                        <!-- Cyan -->
                                        <GradientStop Color="#0000FF" Offset="0.67" />
                                        <!-- Blue -->
                                        <GradientStop Color="#FF00FF" Offset="0.83" />
                                        <!-- Magenta -->
                                        <GradientStop Color="#FF0000" Offset="1.0" />
                                        <!-- Back to Red -->
                                    </LinearGradientBrush>
                                </Slider.Background>
                            </Slider>
                            <TextBox Text="{Binding ElementName=HSV_Hue_Slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Foreground="Black"
                                     Grid.Column="2"
                                     Width="40"
                                     Background="Transparent"
                                     Margin="10,5,10,5"/>

                            <TextBox Text="S"
                                     Grid.Column="0"
                                     Foreground="Black"
                                     Grid.Row="1"
                                     Background="Transparent"
                                     Style="{DynamicResource Body}"
                                     Margin="10,5,10,5"/>
                            <Slider Style="{StaticResource Horizontal_Slider}"
                                     Grid.Column="1"
                                    TickFrequency="0.05"
                                    Minimum="0"
                                     Grid.Row="1"
                                    Value="{Binding Path=HSVColorPicked.Saturation, Mode=TwoWay,
                                            ElementName=ColorSelectorControl}"
                                    Maximum="1"
                                    SmallChange="0.5"
                                    x:Name="HSV_Saturation_Slider">
                                <Slider.Background>
                                    <!-- Gradient representing all hues -->
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{Binding Path=HSVColorPicked, ElementName=ColorSelectorControl,
                                                                Converter={StaticResource HSVConverter}, ConverterParameter=x|min|x|x}" Offset="0.0" />
                                        <GradientStop Color="{Binding Path=HSVColorPicked, ElementName=ColorSelectorControl,
                                                                Converter={StaticResource HSVConverter}, ConverterParameter=x|max|x|x}" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Slider.Background>
                            </Slider>
                            <TextBox Text="{Binding ElementName=HSV_Saturation_Slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Center"
                                     Grid.Row="1"
                                     HorizontalAlignment="Right"
                                     Foreground="Black"
                                     Grid.Column="2"
                                     Width="40"
                                     Background="Transparent"
                                     Margin="10,5,10,5"/>

                            <TextBox Text="V"
                                     Grid.Column="0"
                                     Grid.Row="2"
                                     Foreground="Black"
                                     Background="Transparent"
                                     Style="{DynamicResource Body}"
                                     Margin="10,5,10,5"/>
                            <Slider Style="{StaticResource Horizontal_Slider}"
                                     Grid.Column="1"
                                     Grid.Row="2"
                                    Minimum="0"
                                    TickFrequency="0.05"
                                    Margin="0,10,0,10"
                                    Maximum="1"
                                    Value="{Binding HSVColorPicked.Value, Mode=TwoWay,
                                            ElementName=ColorSelectorControl}"
                                    SmallChange="0.5"
                                    x:Name="HSV_Value_Slider">
                                <Slider.Background>
                                    <!-- Gradient representing all hues -->
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{Binding Path=HSVColorPicked.NoValue, ElementName=ColorSelectorControl}" Offset="0.0" />
                                        <GradientStop Color="{Binding Path=HSVColorPicked.FullValue, ElementName=ColorSelectorControl}" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Slider.Background>
                            </Slider>
                            <TextBox Text="{Binding ElementName=HSV_Value_Slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Foreground="Black"
                                     Grid.Row="2"
                                     Grid.Column="2"
                                     Width="40"
                                     Background="Transparent"
                                     Margin="10,5,10,5"/>

                            <TextBox Text="A"
                                     Grid.Column="0"
                                     Foreground="Black"
                                     Grid.Row="3"
                                     Background="Transparent"
                                     Style="{DynamicResource Body}"
                                     Margin="10,5,10,5"/>
                            <Slider Style="{StaticResource Horizontal_Slider}"
                                     Grid.Column="1"
                                    Minimum="0"
                                     Grid.Row="3"
                                    Value="{Binding HSVColorPicked.AlphaDouble, Mode=TwoWay,
                                            ElementName=ColorSelectorControl}"
                                    Maximum="255"
                                    TickFrequency="1"
                                    SmallChange="1"
                                    x:Name="HSV_Alpha_Slider">
                                <Slider.Background>
                                    <!-- Gradient representing all hues -->
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{Binding Path=HSVColorPicked.NoAlpha, ElementName=ColorSelectorControl}" Offset="0.0" />
                                        <GradientStop Color="{Binding Path=HSVColorPicked.FullAlpha, ElementName=ColorSelectorControl}" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Slider.Background>
                            </Slider>
                            <TextBox Text="{Binding ElementName=HSV_Alpha_Slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Foreground="Black"
                                     Grid.Row="3"
                                     Grid.Column="2"
                                     Width="40"
                                     Background="Transparent"
                                     Margin="10,5,10,5"/>
                        </Grid>
                    </StackPanel>
                </TabItem>
                <TabItem Header="HSL">
                    <Border HorizontalAlignment="Stretch"
                            Height="20"
                            Background="Red"/>
                </TabItem>
                <TabItem Header="RGB">
                    <Border HorizontalAlignment="Stretch"
                            Height="20"
                            Background="Blue"/>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
