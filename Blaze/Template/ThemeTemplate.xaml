<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Color Pallet -->
    <SolidColorBrush x:Key="PrimaryBrush" 
                     Color="#E3AF7B"/>
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="#0A240A" />
    <SolidColorBrush x:Key="SurfaceBrush"
                     Color="#E6E6E6" />
    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="#404738" />
    <SolidColorBrush x:Key="ErrorBrush"
                     Color="#E61C1C" />
    
    <!-- Text and Icon Colors -->
    <SolidColorBrush x:Key="OnPrimaryBrush"
                     Color="#FFFFFF" />
    <SolidColorBrush x:Key="OnSecondaryBrush"
                     Color="#FFFFFF" />
    <SolidColorBrush x:Key="OnSurfaceBrush"
                     Color="#363636" />
    <SolidColorBrush x:Key="OnBackgroundBrush"
                     Color="#FFFFFF" />
    <SolidColorBrush x:Key="OnErrorBrush"
                     Color="#112B3C" />

    <!-- Text  -->
    <FontFamily x:Key="HeaderFont">Miriam</FontFamily>
    <sys:Double x:Key="HeaderFontSize">48</sys:Double>

    <FontFamily x:Key="BodyFont">Ariel</FontFamily>
    <sys:Double x:Key="BodyFontSize">18</sys:Double>

    <FontFamily x:Key="ButtonFont">Ariel</FontFamily>
    <sys:Double x:Key="ButtonFontSize">16</sys:Double>
    
    <!-- Images -->
    <!-- TODO: Fix Images-->
    
    <BitmapImage x:Key="BackgroundImage" UriSource="../Loaded/Background.bmp"/>
    <BitmapImage x:Key="SurfaceImage" UriSource="../Loaded/Blank.png" />
</ResourceDictionary>