<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:Extentions="clr-namespace:Blaze.Extentions"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dropdown Menu -->

    <Style TargetType="{x:Type MenuItem}"
           x:Key="DropDownMenu">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Background"
                Value="#FF3F3F3F" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <ControlTemplate.Resources>
                        <Extentions:NegateValueConverter x:Key="Negate" />
                    </ControlTemplate.Resources>
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.ColumnSpan="2"
                                    CornerRadius="5"
                                    Background="#FF3F3F3F"
                                    BorderBrush="#FF97A0A5"
                                    BorderThickness="1" />
                            
                            <!-- Down Arrow -->

                            <iconPacks:PackIconCodicons Kind="ChevronDown"
                                                        Name="Arrow"
                                                        Grid.Column="1"
                                                        Foreground="White"
                                                        HorizontalAlignment="Center"
                                                        Width="10"
                                                        VerticalAlignment="Center" />
                        </Grid>

                        <!-- Header -->

                        <ContentPresenter Content="{TemplateBinding Header}"
                                          Margin="10,3,23,3"
                                          Focusable="True"
                                          x:Name="Header"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center" />

                        <!-- Dropdown Menu Popup -->

                        <Popup Name="Popup"
                               IsOpen="{TemplateBinding IsSubmenuOpen}"
                               AllowsTransparency="True"
                               Placement="Left"
                               VerticalOffset="{TemplateBinding ActualHeight}"
                               HorizontalOffset="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Negate}}"
                               Focusable="False"
                               PopupAnimation="Slide">

                            <!-- Menu Items -->

                            <Grid Name="DropDown"
                                  SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding ActualWidth}">
                                <Border Name="DropDownBorder"
                                        Background="#FF3F3F3F"
                                        BorderThickness="1"
                                        BorderBrush="#888888" />
                                <StackPanel IsItemsHost="True"
                                            Margin="4,6,4,6"
                                            KeyboardNavigation.DirectionalNavigation="Contained" />
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        
                        <!-- Dropdown Open Trigger -->

                        <Trigger Property="IsSubmenuOpen"
                                 Value="True">
                            <Setter Property="Foreground"
                                    Value="Orange" />
                            <Setter TargetName="Arrow"
                                    Property="Kind"
                                    Value="ChevronUp" />
                            <Setter TargetName="Arrow"
                                    Property="Foreground"
                                    Value="Orange" />
                        </Trigger>

                        <!-- Extra Style Setters -->

                        <Trigger Property="HasItems"
                                 Value="false">
                            <Setter TargetName="DropDownBorder"
                                    Property="MinHeight"
                                    Value="95" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                        <Trigger Property="IsGrouping"
                                 Value="true">
                            <Setter Property="ScrollViewer.CanContentScroll"
                                    Value="false" />
                        </Trigger>
                        <Trigger SourceName="Popup"
                                 Property="Popup.AllowsTransparency"
                                 Value="true">
                            <Setter TargetName="DropDownBorder"
                                    Property="CornerRadius"
                                    Value="5" />
                            <Setter TargetName="DropDownBorder"
                                    Property="Margin"
                                    Value="0,2,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Extra Menu -->

    <Style TargetType="{x:Type MenuItem}"
           x:Key="HangingMenu">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <ControlTemplate.Resources>
                        <Extentions:IconToPlacementConverter x:Key="IconToPlacement" />
                    </ControlTemplate.Resources>

                    <Border Name="Border"
                            Padding="2"
                            SnapsToDevicePixels="true">
                        <StackPanel Orientation="Horizontal">

                            <!-- Header -->

                            <ContentPresenter Content="{TemplateBinding Header}" />

                            <!-- Arrow -->

                            <iconPacks:PackIconCodicons Kind="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Extentions:Codicons.Property)}"
                                                        Name="Arrow"
                                                        Grid.Column="1"
                                                        Foreground="White"
                                                        HorizontalAlignment="Right"
                                                        Height="10"
                                                        VerticalAlignment="Center" />

                            <!-- Menu Popup -->

                            <Popup Name="Popup"
                                   IsOpen="{TemplateBinding IsSubmenuOpen}"
                                   AllowsTransparency="True"
                                   Placement="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[1].Kind,Converter={StaticResource IconToPlacement}}"
                                   Focusable="False"
                                   PopupAnimation="Slide">

                                <!-- Content -->


                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}">
                                    <Border Name="DropDownBorder"
                                            Background="#FF3F3F3F"
                                            BorderThickness="1"
                                            BorderBrush="#888888" />

                                    <StackPanel IsItemsHost="True"
                                                Margin="4,6,4,6"
                                                Name="ItemHost"
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                                </Grid>
                            </Popup>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>

                        <!-- Extra Style Setters -->

                        <Trigger Property="IsHighlighted"
                                 Value="true">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="#FF4F4F4F" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                        <Trigger Property="HasItems"
                                 Value="false">
                            <Setter TargetName="DropDownBorder"
                                    Property="MinHeight"
                                    Value="95" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                        <Trigger Property="IsGrouping"
                                 Value="true">
                            <Setter Property="ScrollViewer.CanContentScroll"
                                    Value="false" />
                        </Trigger>
                        <Trigger SourceName="Popup"
                                 Property="Popup.AllowsTransparency"
                                 Value="true">
                            <Setter TargetName="DropDownBorder"
                                    Property="CornerRadius"
                                    Value="5" />
                            <Setter TargetName="DropDownBorder"
                                    Property="Margin"
                                    Value="0,2,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu Item -->

    <Style TargetType="{x:Type MenuItem}"
           x:Key="DropDownItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Border Name="Border"
                            Padding="2"
                            SnapsToDevicePixels="true">
                       
                        <!-- Content -->

                        <ContentPresenter Content="{TemplateBinding Header}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        
                        <!-- Extra Style Setters -->

                        <Trigger Property="IsHighlighted"
                                 Value="true">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="#FF4F4F4F" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ToggleButton With Arrow -->

    <ControlTemplate x:Key="ComboBoxToggleButton"
                     TargetType="{x:Type ToggleButton}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2"
                    CornerRadius="5"
                    Background="#FF3F3F3F"
                    BorderBrush="#FF97A0A5"
                    BorderThickness="1" />
            <iconPacks:PackIconCodicons Kind="ChevronDown"
                                        Name="Arrow"
                                        Grid.Column="1"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        Width="10"
                                        VerticalAlignment="Center" />
        </Grid>
        <ControlTemplate.Triggers>
            
            <!-- Activation Trigger -->

            <Trigger Property="IsChecked"
                     Value="True">
                <Setter TargetName="Arrow"
                        Property="Kind"
                        Value="ChevronUp" />
                <Setter TargetName="Arrow"
                        Property="Foreground"
                        Value="Orange" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Drobdown Combobox -->

    <Style x:Key="DropdownCombobox"
           TargetType="{x:Type ComboBox}">
        
        <!-- Style Setters -->

        <Setter Property="SnapsToDevicePixels"
                Value="true" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll"
                Value="true" />
        <Setter Property="IsReadOnly"
                Value="True" />
        <Setter Property="MinWidth"
                Value="100" />
        <Setter Property="MinHeight"
                Value="20" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Background"
                Value="#FF3F3F3F" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        
                        <!-- Toggle Button -->

                        <ToggleButton Name="ToggleButton"
                                      Template="{StaticResource ComboBoxToggleButton}"
                                      Grid.Column="2"
                                      Focusable="false"
                                      IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press">
                        </ToggleButton>

                        <!-- Header -->

                        <StackPanel Margin="10,3,23,3"
                                    Focusable="True"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    IsHitTestVisible="False"
                                    Orientation="Horizontal">

                            <iconPacks:PackIconMaterialDesign Kind="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Extentions:MaterialDesignIcon.Property)}"
                                                              Foreground="White"
                                                              Width="10"
                                                              Margin="0,0,10,0" />

                            <TextBlock Text="{TemplateBinding Text}" />
                        </StackPanel>

                        <!-- Menu -->

                        <Popup Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">

                            <Grid Name="DropDown"
                                  SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border Name="DropDownBorder"
                                        Background="#FF3F3F3F"
                                        BorderThickness="1"
                                        BorderBrush="#888888" />
                                
                                <!-- Content -->

                                <ScrollViewer Margin="4,6,4,6"
                                              SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        
                        <!-- Activation Trigger -->

                        <Trigger Property="IsDropDownOpen"
                                 Value="True">
                            <Setter Property="Foreground"
                                    Value="Orange" />
                        </Trigger>

                        <!-- Extra Style Setters -->

                        <Trigger Property="HasItems"
                                 Value="false">
                            <Setter TargetName="DropDownBorder"
                                    Property="MinHeight"
                                    Value="95" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                        <Trigger Property="IsGrouping"
                                 Value="true">
                            <Setter Property="ScrollViewer.CanContentScroll"
                                    Value="false" />
                        </Trigger>
                        <Trigger SourceName="Popup"
                                 Property="Popup.AllowsTransparency"
                                 Value="true">
                            <Setter TargetName="DropDownBorder"
                                    Property="CornerRadius"
                                    Value="5" />
                            <Setter TargetName="DropDownBorder"
                                    Property="Margin"
                                    Value="0,2,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
        </Style.Triggers>
    </Style>

    <!-- Drobdown Combobox Item -->

    <Style x:Key="DropdownComboboxItem"
           TargetType="{x:Type ComboBoxItem}">
        
        <!-- Style Setters -->

        <Setter Property="SnapsToDevicePixels"
                Value="true" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Border Name="Border"
                            Padding="2"
                            SnapsToDevicePixels="true">

                        <!-- Content -->

                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        
                        <!-- Color Change Trigger -->

                        <Trigger Property="IsHighlighted"
                                 Value="true">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="#FF4F4F4F" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#888888" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
