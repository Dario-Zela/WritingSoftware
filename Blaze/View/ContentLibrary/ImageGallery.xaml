<Popup x:Class="Blaze.View.ContentLibrary.ImageGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Blaze.View.ContentLibrary"
        mc:Ignorable="d" 
       StaysOpen="False"
       IsOpen="True"
       AllowsTransparency="True"
        xmlns:UIElements="clr-namespace:Blaze.UIElements"
        xmlns:converter="clr-namespace:Blaze.Core"
        d:DataContext="{d:DesignInstance Type=local:ImageGallery}"
        x:Name="ImageGalleryController"
        d:DesignHeight="450" d:DesignWidth="800">
    <Popup.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <converter:ColorIntensityConverter x:Key="ColorIntensityConverter" />
    </Popup.Resources>
    <Grid Margin="20"
          MaxWidth="1000"
          MaxHeight="600">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Padding="10"
                Grid.RowSpan="2"
                CornerRadius="10"
                Background="{Binding SurfaceColor, ElementName=ImageGalleryController}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
        </Border>
        <Grid Margin="10" Focusable="True"
              Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DockPanel>
                <UIElements:CustomComboSelection BorderThickness="0"
                                                 Padding="10,4,10,4"
                                                 x:Name="SortSelector"
                                                 VerticalAlignment="Top"
                                                 FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                 VerticalContentAlignment="Center"
                                                 FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                 ButtonCornerRadius="10"
                                                 MenuBackgroundColor="{Binding SurfaceColor, ElementName=ImageGalleryController}"
                                                 Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                 MenuHoverColor="{Binding SurfaceColor, ElementName=ImageGalleryController}"
                                                 AccentColor="{Binding PrimaryColor, ElementName=ImageGalleryController}"
                                                 Background="{Binding SurfaceColor, ElementName=ImageGalleryController}">
                    <UIElements:CustomComboSelection.PreTextContent>
                        <UIElements:IconMaterial Kind="SortVariant"
                                                 Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                 Width="15"/>
                    </UIElements:CustomComboSelection.PreTextContent>
                    <ComboBoxItem Content="Alphabetical"
                                  Padding="5"
                                  FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Selected="AlphabeticalSort"/>
                    <ComboBoxItem Content="Recently Added"
                                  Padding="5"
                                  FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Selected="RecentSort"/>
                    <ComboBoxItem Content="Albums First"
                                  Padding="5"
                                  FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                  Selected="AlbumsSort"/>
                </UIElements:CustomComboSelection>
                <UIElements:CustomButton Background="{Binding SurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                        Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                        Style="{DynamicResource TextButton}"
                                         Padding="10,7,10,7"
                                         Margin="5,0,5,0"
                                         Click="CreateNewAlbum"
                                        Content="Create Album"
                                         VerticalAlignment="Top"
                                        FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                        FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                        HorizontalAlignment="Left"/>

                <TextBox Style="{StaticResource Header}"
                         Text="Image Gallery"
                         Margin="20,0,0,0"
                         Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                        FontSize="{Binding HeaderFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                        FontFamily="{Binding HeaderFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"/>
                <DockPanel HorizontalAlignment="Right">
                    <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                             Width="150"
                             Height="30"
                             Margin="20,0,20,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border BorderBrush="{Binding SecondaryColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                    BorderThickness="1"
                                                    Padding="5,0,5,0"
                                                    CornerRadius="5"
                                                    x:Name="border">
                                                <Grid>
                                                    <TextBox Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" 
                                                            BorderThickness="0"
                                                            FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                            FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                                VerticalAlignment="Center"
                                                            x:Name="SearchBox"
                                                            FontWeight="Normal">
                                                    </TextBox>
                                                    <TextBlock HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Text="Search"
                                                                 FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                                FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                                Foreground="#FF808080"
                                                                IsHitTestVisible="False"
                                                                x:Name="UserMessage"
                                                                Visibility="Hidden"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="Text" Value=""/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Visibility" TargetName="UserMessage" Value="Visible"/>
                                                </MultiTrigger>
                                                <Trigger Property="IsFocused" SourceName="SearchBox" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{Binding PrimaryColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding StartSearch, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}" Key="Return" />
                            <KeyBinding Command="{Binding StartSearch, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}" Key="Enter" />
                        </TextBox.InputBindings>
                    </TextBox>
                </DockPanel>
            </DockPanel>

            <Grid Margin="10,20,10,10"
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="ImageAdderButton"
                        Click="OpenFileSelector"
                        Cursor="Hand"
                        Grid.Column="0"
                        Background="{Binding SurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                        BorderBrush="{Binding SecondaryColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                        AllowDrop="True" PreviewDragOver="DragFile" Drop="DropFile">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border BorderThickness="2"
                                                Height="80"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background, Converter={StaticResource ColorIntensityConverter}, ConverterParameter=1.5|100}">
                                            <Border.BorderBrush>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Rectangle StrokeDashArray="3 1.5" 
                                                                    StrokeThickness="2"
                                                                   Stroke="{TemplateBinding BorderBrush}"
                                                                      Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                   RadiusX="10" RadiusY="10"
                                                                      Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Border.BorderBrush>
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Margin="10">
                        <TextBox Style="{StaticResource Body}"
                                 HorizontalAlignment="Center"
                                 FontWeight="DemiBold"
                                 IsHitTestVisible="False"
                                 Text="Drag and drop an image here, or click to select one from your device."
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                 Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                FontFamily="{Binding BodyFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}">

                        </TextBox>
                        <TextBox Style="{StaticResource Body}"
                                 HorizontalAlignment="Center"
                                 FontWeight="DemiBold"
                                 IsHitTestVisible="False"
                                 Margin="0,10,0,0"
                                 Name="FileDebugger"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                 Foreground="{Binding ErrorColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                FontFamily="{Binding BodyFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}">

                        </TextBox>
                    </StackPanel>
                </Button>
                <StackPanel Margin="10,10,10,10" Grid.Column="1">
                    <UIElements:CustomButton Background="{Binding SurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                            Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                            Style="{DynamicResource TextButton}"
                                            Margin="0,0,0,0"
                                             Click="DeleteSelected"
                                            Visibility="{Binding GalleryMode, RelativeSource={RelativeSource AncestorType=local:ImageGallery}, Converter={StaticResource BooleanToVisibility}}"
                                            Content="Delete Selected"
                                             Padding="15,10,15,10"
                                            FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                            FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                            HorizontalAlignment="Center"/>
                    <UIElements:CustomComboBox BorderThickness="0"
                                                HorizontalAlignment="Left"
                                            Visibility="{Binding GalleryMode, RelativeSource={RelativeSource AncestorType=local:ImageGallery}, Converter={StaticResource BooleanToVisibility}}"
                                                Padding="5,5,5,5"
                                               ItemPadding="5"
                                               SelectionChanged="MoveSelected"
                                                 VerticalAlignment="Top"
                                               x:Name="MoveButton"
                                                  Header="Move to Album"
                                                  VerticalContentAlignment="Center"
                                                  FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                  FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                  ButtonCornerRadius="10"
                                                  MenuBackgroundColor="{Binding SurfaceColor, ElementName=ImageGalleryController}"
                                                  Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                  MenuHoverColor="{Binding SurfaceColor, ElementName=ImageGalleryController}"
                                                  AccentColor="{Binding OnSurfaceColor, ElementName=ImageGalleryController}"
                                                  Background="{Binding SurfaceColor, ElementName=ImageGalleryController}">
                        <UIElements:CustomComboBox.PreTextContent>
                            <UIElements:IconMaterial Kind="CheckboxMultipleBlank"
                                                Foreground="{Binding OnSurfaceColor, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                                Width="15"/>
                        </UIElements:CustomComboBox.PreTextContent>
                    </UIElements:CustomComboBox>

                </StackPanel>
            </Grid>
            <local:AlbumDisplay Background="White"
                                x:Name="AlbumDisplayer"
                                Grid.Row="2"
                                GalleryMode="{Binding GalleryMode, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                FontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                FontFamily="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                HeaderFontSize="{Binding HeaderFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                HeaderFont="{Binding HeaderFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"                                
                                ButtonFontSize="{Binding ButtonFontSize, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                ButtonFont="{Binding ButtonFont, RelativeSource={RelativeSource AncestorType=local:ImageGallery}}"
                                Foreground="Black"
                                AccentColor="Orange"
                                ErrorColor="Red"
                                OnErrorColor="White"
                                Margin="0,2,0,0"/>
        </Grid>
        <DockPanel Grid.Row="1"
                   Margin="0,10,0,10"
                   Visibility="{Binding ButtonVisibility}"
                   HorizontalAlignment="Center">
                <UIElements:CustomButton Style="{DynamicResource TextButton}"
                                            Content="Cancel"
                                         Margin="0,0,20,0"
                                            Command="{Binding CancelAction}"
                                            Background="{DynamicResource ApplicationSurfaceBrush}"
                                            Foreground="{DynamicResource ApplicationSecondaryBrush}"
                                            FontFamily="{DynamicResource ApplicationButtonFont}"
                                            FontSize="{DynamicResource ApplicationButtonFontSize}"
                                            VerticalContentAlignment="Center"/>
                <UIElements:CustomButton Style="{DynamicResource NormalButton}"
                                         Margin="20,0,0,0"
                                            Content="Confirm"
                                            Command="{Binding SaveAction}"
                                            Background="{DynamicResource ApplicationSecondaryBrush}"
                                            Foreground="{DynamicResource ApplicationSurfaceBrush}"
                                            FontFamily="{DynamicResource ApplicationButtonFont}"
                                            FontSize="{DynamicResource ApplicationButtonFontSize}"
                                            VerticalContentAlignment="Center"/>
        </DockPanel>
    </Grid>
</Popup>
