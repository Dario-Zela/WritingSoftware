<UserControl x:Class="Blaze.View.Windows.Theme.ThemeLibrary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blaze.View.Windows.Theme"
             xmlns:UIElements="clr-namespace:Blaze.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="NonScrollableListView"
                         TargetType="ListView">
            <ItemsPresenter />
        </ControlTemplate>
    </UserControl.Resources>
    <Border Background="{DynamicResource SurfaceBrush}">
        <Grid Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Margin="0, 0, 0, 50">

                <StackPanel Margin="50, 50, 50, 50">

                    <DockPanel VerticalAlignment="Top"
                               Grid.Column="2">

                        <TextBlock Text="Themes"
                                   FontFamily="{DynamicResource HeaderFont}"
                                   FontSize="{DynamicResource HeaderFontSize}"
                                   Foreground="{DynamicResource OnApplicationSurfaceBrush}" />
                        <Button Height="40"
                                Width="100"
                                Background="{DynamicResource SecondaryBrush}"
                                HorizontalAlignment="Right">
                            <TextBlock Text="NewTheme"
                                       FontFamily="{DynamicResource BodyFont}"
                                       FontSize="{DynamicResource BodyFontSize}"
                                       Foreground="{DynamicResource OnSecondaryBrush}" />
                        </Button>
                    </DockPanel>
                    <Separator Margin="0,0,0,20"/>

                    <UIElements:ThemeListView x:Name="AvailableThemes"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                ItemMargin="10,10,10,10"
                                              Background="Transparent">
                    </UIElements:ThemeListView>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</UserControl>
